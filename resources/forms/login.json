[
    {
        "key": "email",
        "language": "en",
        "gloss": "Email",
        "type": "TEXT",
        "repeatable": false,
        "validation": {
            "required": {
            	"value": true,
            	"message": "login.email.required"
            },
            "pattern": {
            	"value": "^[-a-z0-9~!$%^&*_=+}{\\'?]+(\\.[-a-z0-9~!$%^&*_=+}{\\'?]+)*@([a-z0-9_][-a-z0-9_]*(\\.[-a-z0-9_]+)*\\.(aero|arpa|biz|com|coop|edu|gov|info|int|mil|museum|name|net|org|pro|travel|mobi|[a-z][a-z])|([0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}))(:[0-9]{1,5})?$",
            	"message": "login.email.pattern"
            }
        }
    },
    {
        "key": "password",
        "language": "en",
        "gloss": "Password",
        "type": "PASSWORD",
        "repeatable": false,
